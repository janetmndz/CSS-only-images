doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Primary Planet
        link(rel="stylesheet" type="text/css" media="screen" href="/css/styles.css")
